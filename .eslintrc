{
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "max-len": [2, { "code":  120}],
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "import/extensions": [
      "error", {
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "env": {
    "jest": true,
    "node": true
  }
}
